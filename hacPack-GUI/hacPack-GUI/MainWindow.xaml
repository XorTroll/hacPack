                    <Label x:Name="lbl_legalinfo_nca" Content="Legal Information NCA:" HorizontalAlignment="Left" Margin="8,97,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.561"/>
                    <TextBox x:Name="txt_legalinfo_nca" HorizontalAlignment="Left" Height="22" Margin="146,99,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="208" IsReadOnly="True"/>
