        mc:Ignorable="d"
        Title="hacPack GUI v1.00 by The-4n" Height="565.615" Width="766.694" WindowStartupLocation="Manual" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid HorizontalAlignment="Left" Width="759" Margin="0,0,-5.667,0.333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="433*"/>
            <ColumnDefinition Width="371*"/>
        </Grid.ColumnDefinitions>
