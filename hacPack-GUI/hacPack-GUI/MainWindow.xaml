                    <Label x:Name="lbl_data_nca" Content="Data NCA:" HorizontalAlignment="Left" Margin="76,151,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.561"/>
                    <TextBox x:Name="txt_data_nca" HorizontalAlignment="Left" Height="22" Margin="146,153,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="208" IsReadOnly="True"/>
                    <Button x:Name="btn_browse_data_nca" Content="Browse" HorizontalAlignment="Left" Margin="359,153,0,0" VerticalAlignment="Top" Width="102" Height="22" Click="btn_browse_data_nca_Click" />
                    <Label x:Name="lbl_publicdata_nca" Content="PublicData NCA:" HorizontalAlignment="Left" Margin="44,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.561"/>
                    <TextBox x:Name="txt_publicdata_nca" HorizontalAlignment="Left" Height="22" Margin="146,180,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="208" IsReadOnly="True" IsEnabled="False"/>
